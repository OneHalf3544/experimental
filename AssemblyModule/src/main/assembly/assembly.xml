<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>collectWebAppResources</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
    </formats>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>ru.onehalf.testprogram:CommonModule</include>
                <include>ru.onehalf.testprogram:TestCreatorModule</include>
                <include>ru.onehalf.testprogram:TesterModule</include>
                <include>ru.onehalf.testprogram:WebInterfaceModule</include>
            </includes>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>src/main/webapp</directory>
                    </fileSet>
                    <fileSet>
                        <outputDirectory>WEB-INF/conf</outputDirectory>
                        <directory>src/main/config</directory>
                        <excludes>
                            <exclude>log4j.xml</exclude>
                        </excludes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>
    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>